
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    function isAdmin() {
      return request.auth.token.admin == true;
    }
    
    function isDelivery() {
        return request.auth.token.delivery == true;
    }

    // USERS collection
    // Users can read and update their own document. No one can create or delete user docs through the client.
    match /users/{userId} {
      allow read, update: if isSignedIn() && isOwner(userId);
      allow list: if isAdmin();
    }

    // users/{userId}/ADDRESSES sub-collection
    // Users can fully manage their own addresses.
    match /users/{userId}/addresses/{addressId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }
    
    // adminMessages collection
    // Admins can create messages. Users can only read messages sent to them.
    match /adminMessages/{messageId} {
        allow create: if isAdmin();
        allow read: if isSignedIn() && (isAdmin() || resource.data.userId == request.auth.uid);
        allow list: if isAdmin(); // Only admin can list all messages.
        allow update, delete: if isAdmin();
    }

    // GLOBALS collection
    // Anyone can read, only admins can write.
    match /globals/{docId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // MENUITEMS collection
    // Anyone can read, only admins can write.
    match /menuItems/{itemId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // ORDERS collection
    // Users can create their own orders.
    // Users can read their own orders.
    // Admins can read/update all orders.
    // Delivery staff can read/update orders.
    match /orders/{orderId} {
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      allow read: if isSignedIn() && (isOwner(resource.data.userId) || isAdmin() || isDelivery());
      allow update: if isSignedIn() && (isAdmin() || isDelivery());
      allow delete: if false; // Orders should be cancelled, not deleted
    }
  }
}
