rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- UTILITY FUNCTIONS ---
    function isAuth() {
      return request.auth != null;
    }
    
    function isAdmin() {
      return isAuth() && request.auth.token.email == 'harshsingh9817@gmail.com';
    }
    
    function isDelivery() {
      // Check for the custom claim set during authentication.
      return isAuth() && request.auth.token.isDelivery == true;
    }

    // --- COLLECTION RULES ---
    
    match /users/{userId} {
      // A user can read or write to their own document. Admins can access any.
      allow read, write: if (isAuth() && request.auth.uid == userId) || isAdmin();

      // A user can manage their own addresses.
      match /addresses/{addressId} {
        // More specific rules for addresses
        allow get, list: if isAuth() && request.auth.uid == userId;
        allow create, update, delete: if isAuth() && request.auth.uid == userId;
      }
    }
    
    match /orders/{orderId} {
      // Any authenticated user can create an order.
      allow create: if isAuth();

      // Users can get their own order. Admins/Delivery can get any.
      allow get: if (isAuth() && resource.data.userId == request.auth.uid) || isAdmin() || isDelivery();
      
      // Users can query for their own orders. Admins/Delivery can query all orders.
      allow list: if (isAuth() && query.where.userId == request.auth.uid) || isAdmin() || isDelivery();
      
      // A user can update their own order (to cancel/review). Admins/Delivery can update any order's status.
      allow update: if (isAuth() && resource.data.userId == request.auth.uid) || isAdmin() || isDelivery();
      
      // Only admins can delete orders.
      allow delete: if isAdmin();
    }
    
    match /menuItems/{itemId} {
      // Anyone can read the menu.
      allow read: if true;
      // Only admins can change the menu.
      allow write: if isAdmin();
    }
    
    match /globals/{docId} {
      // Anyone can read global settings like Hero/Payment info.
      allow read: if true;
      // Only admins can change global settings.
      allow write: if isAdmin();
    }
    
    match /riders/{riderId} {
        // Any authenticated user (specifically admins in the app) can see the rider list.
        allow read: if isAuth();
        // Only admins can add/remove riders.
        allow write: if isAdmin();
    }
    
    match /supportTickets/{ticketId} {
      // Any authenticated user can create a support ticket.
      allow create: if isAuth();
      // Only admins can view and manage tickets.
      allow read, write: if isAdmin();
    }
    
    match /adminMessages/{messageId} {
      // Admins can send messages.
      allow read, write: if isAdmin();
      // Users can only query for messages sent to them.
      allow list: if isAuth() && query.where.userId == request.auth.uid;
    }
  }
}
