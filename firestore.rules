
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- UTILITY FUNCTIONS ---
    function isAuth() {
      return request.auth != null;
    }
    function isUser(uid) {
      return isAuth() && request.auth.uid == uid;
    }
    function isAdmin() {
      return isAuth() && request.auth.token.email == 'harshsingh9817@gmail.com';
    }
    function isDelivery() {
      // Check for the isDelivery flag on the user's document.
      // This is more reliable than checking a separate collection.
      return isAuth() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isDelivery == true;
    }

    // --- USERS ---
    // Users can read/update their own document. Only admins can list all users.
    match /users/{userId} {
      allow get, update, delete: if isUser(userId) || isAdmin();
      allow create: if isAuth();
      allow list: if isAdmin();

      // --- ADDRESSES SUBCOLLECTION ---
      // Users can manage their own addresses.
      match /addresses/{addressId} {
        allow get, list, write: if isUser(userId);
      }
    }
    
    // --- RIDERS ---
    // Only admins can manage the list of riders.
    match /riders/{riderId} {
        allow read, write: if isAdmin();
    }
    
    // --- SUPPORT TICKETS ---
    // Authenticated users can create tickets. Admins can manage them.
    match /supportTickets/{ticketId} {
        allow create: if isAuth();
        allow read, update: if isAdmin();
    }

    // --- MENU ITEMS ---
    // Anyone can read menu items. Only admins can write.
    match /menuItems/{itemId} {
      allow get: if isAuth();
      allow list, create, update, delete: if isAdmin();
    }

    // --- ORDERS ---
    // Users can read their own orders.
    // Admins and Delivery partners can read all orders.
    match /orders/{orderId} {
      allow create: if isAuth();
      // Users can get their own orders. Admins/Delivery can get any order.
      allow get: if isUser(resource.data.userId) || isAdmin() || isDelivery();
      allow update: if isAdmin() || isDelivery();
      
      // A user can query orders, and the get rule will be applied to filter results.
      allow list: if isAuth();
    }
    
    // --- GLOBALS ---
    // Site-wide settings like Hero text and Payment settings.
    match /globals/{docId} {
        allow get: if isAuth();
        allow write: if isAdmin();
    }
  }
}
